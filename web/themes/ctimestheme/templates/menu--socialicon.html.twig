{#
/**
 * @file
 * Theme override for a social menu with Font Awesome icons.
 */
#}

{% import _self as menus %}

{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <ul{{ attributes.addClass(menu_level == 0 ? 'navbar-nav' : 'dropdown-menu') }}>
      {% for item in items %}
        <li class="nav-item{{ item.in_active_trail ? ' active' }}">
          
          {# Print anchor manually so <small> is not escaped #}
          <a href="{{ item.url }}" class="nav-link text-body">
           <small class="fab fa-{{ item.title|lower|replace({' ': '-'}) }}"></small>
          </a>

          {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}

{{ menus.menu_links(items, attributes, 0) }}
